{
  "name": "signotator",
  "version": "0.1.0",
  "description": "Visual input component for Sign language coded with signotation.",
  "module": "dist/bundle.js",
  "style": "style.css",
  "source": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle index.js --jsx=preserve --loader:.js=jsx --packages=external --outfile=dist/bundle.js --format=esm",
    "test": "esbuild --bundle test/main.js --jsx=automatic --loader:.js=jsx --outfile=test/bundle/code.js && postcss test/style.css -o test/bundle/style.css"
  },
  "keywords": [
    "sign language",
    "signotation",
    "signario",
    "reactjs",
    "tailwindcss"
  ],
  "author": "Antonio F. G. Sevilla <afgs@ucm.es>",
  "license": "OSL-3.0",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "esbuild": "0.16.17",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4"
  }
}
